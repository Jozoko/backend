# Application
NODE_ENV=development
PORT=3000

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=innosecportal
DB_LOGGING=true
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DEFAULT_TTL=3600
REDIS_TLS=false

# JWT
JWT_SECRET=innosecportal-secret-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=innosecportal-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Admin default credentials (only used for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production

# LDAP
LDAP_SYNC_INTERVAL=0 0 * * * * # Run at midnight every day by default 