# Application
NODE_ENV=development
PORT=3000

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=innosecportal
DB_LOGGING=true
DB_SSL=false
DB_SYNCHRONIZE=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DEFAULT_TTL=3600
REDIS_TLS=false

# Cache
CACHE_TTL=3600
CACHE_MAX=10000

# JWT
JWT_SECRET=innosecportal-dev-secret-key
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=innosecportal-dev-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Admin default credentials (only used for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# LDAP
LDAP_SYNC_INTERVAL=0 0 * * * * 